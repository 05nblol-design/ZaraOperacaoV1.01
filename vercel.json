{
  "version": 2,
  "name": "zara-operacao-frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "outputDirectory": "frontend/dist",
  "buildCommand": "cd frontend && npm ci && npm run build",
  "devCommand": "cd frontend && npm run dev",
  "installCommand": "cd frontend && npm ci",
  "framework": "vite",
  "env": {
    "VITE_API_URL": "https://zara-backend-production-aab3.up.railway.app",
    "VITE_SOCKET_URL": "https://zara-backend-production-aab3.up.railway.app",
    "VITE_BACKEND_URL": "https://zara-backend-production-aab3.up.railway.app",
    "VITE_APP_NAME": "Zara Operação",
    "VITE_APP_VERSION": "1.0.1",
    "VITE_BUILD_SOURCEMAP": "false",
    "VITE_BUILD_MINIFY": "true",
    "VITE_SECURE_COOKIES": "true"
  }
}
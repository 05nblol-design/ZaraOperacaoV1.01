# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================

# Configuração do Banco de Dados
# Para desenvolvimento (SQLite)
DATABASE_URL="file:./prisma/dev.db"

# Para produção (PostgreSQL) - descomente e configure:
# DATABASE_URL="postgresql://usuario:senha@host:porta/database?schema=public"

# Exemplos de DATABASE_URL para diferentes provedores:
# Railway: postgresql://postgres:senha@containers-us-west-xxx.railway.app:port/railway
# Render: postgresql://usuario:senha@dpg-xxx-a.oregon-postgres.render.com/database
# Supabase: postgresql://postgres:senha@db.xxx.supabase.co:5432/postgres
# Neon: postgresql://usuario:senha@ep-xxx.us-east-1.aws.neon.tech/database

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================

# JWT Configuration
JWT_SECRET="seu_jwt_secret_aqui_deve_ser_muito_seguro_e_unico"
JWT_EXPIRES_IN="7d"

# ===========================================
# CONFIGURAÇÕES DO SERVIDOR
# ===========================================

# Porta do servidor
PORT=5000

# Ambiente (development, production, test)
NODE_ENV="development"

# CORS - URLs permitidas (separadas por vírgula)
# Desenvolvimento:
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"
# Produção (exemplo):
# CORS_ORIGIN="https://seu-dominio.com,https://www.seu-dominio.com"

# ===========================================
# CONFIGURAÇÕES DE UPLOAD
# ===========================================

# Tamanho máximo de upload (em bytes) - 10MB
UPLOAD_MAX_SIZE=10485760

# Tipos de arquivo permitidos
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,image/webp,application/pdf"

# Diretório de uploads
UPLOAD_DIR="./uploads"

# ===========================================
# CONFIGURAÇÕES DE EMAIL
# ===========================================

# Configuração SMTP
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="seu_email@gmail.com"
EMAIL_PASS="sua_senha_de_app_do_gmail"
EMAIL_FROM="Sistema ZARA <seu_email@gmail.com>"

# ===========================================
# CONFIGURAÇÕES DE CACHE (REDIS)
# ===========================================

# Redis URL (opcional)
# Desenvolvimento:
REDIS_URL="redis://localhost:6379"
# Produção (exemplo):
# REDIS_URL="redis://usuario:senha@host:porta"

# ===========================================
# NOTIFICAÇÕES PUSH (FIREBASE)
# ===========================================

# Firebase Admin SDK
FIREBASE_PROJECT_ID="seu_projeto_firebase"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nsua_chave_privada_aqui\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@seu_projeto.iam.gserviceaccount.com"

# ===========================================
# MONITORAMENTO E LOGS
# ===========================================

# Sentry para monitoramento de erros (opcional)
SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"

# Configuração de Logs
LOG_LEVEL="info"
LOG_FILE="logs/app.log"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES="5"

# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ===========================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET="sua_session_secret_muito_segura"

# Configurações de segurança adiccionais
TRUST_PROXY=true
SECURE_COOKIES=true

# ===========================================
# CONFIGURAÇÕES ESPECÍFICAS DA APLICAÇÃO
# ===========================================

# Configurações do sistema ZARA
APP_NAME="Sistema ZARA"
APP_VERSION="1.0.1"
APP_URL="http://localhost:5173"

# Configurações de turnos
DEFAULT_SHIFT_DURATION=8
SHIFT_OVERLAP_MINUTES=15

# Configurações de qualidade
QUALITY_TEST_RETENTION_DAYS=365
MAX_IMAGES_PER_TEST=10

# Configurações de teflon
TEFLON_CHANGE_NOTIFICATION_HOURS=24
TEFLON_EXPIRY_WARNING_DAYS=7
# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO - ZARA SYSTEM
# ===========================================

# Ambiente
NODE_ENV=production
PORT=5000

# Banco de Dados PostgreSQL (Railway)
DATABASE_URL=postgresql://postgres:GNquZiBhCMsFDZbvDTevPkrWFdRyyLQM@postgres.railway.internal:5432/railway

# JWT - IMPORTANTE: Use uma chave secreta forte em produção
JWT_SECRET=zara-production-jwt-secret-key-2024-ultra-secure
JWT_EXPIRES_IN=7d

# URLs de Produção
# Backend no Railway, Frontend no Vercel
FRONTEND_URL=https://sistema-zara-frontend.vercel.app
SERVER_URL=https://zaraoperacaov101-production.up.railway.app
CLIENT_URL=https://sistema-zara-frontend.vercel.app

# CORS - URLs permitidas em produção (usar CORS_ORIGINS para consistência)
CORS_ORIGINS=https://sistema-zara-frontend.vercel.app,https://www.sistema-zara-frontend.vercel.app
CORS_ORIGIN=https://sistema-zara-frontend.vercel.app,https://www.sistema-zara-frontend.vercel.app

# Redis (opcional - para cache em produção)
# REDIS_URL=redis://seu-redis-host:6379

# Email Configuration (Configure com seu provedor)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app
EMAIL_FROM=noreply@zara-operacao.com

# Firebase Configuration (opcional)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_CLIENT_ID=
FIREBASE_CLIENT_CERT_URL=

# Notification Settings
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS=true
PUSH_NOTIFICATIONS=true

# Scheduler Configuration
SCHEDULER_ENABLED=true
DAILY_REPORT_TIME=18:00
TEFLON_CHECK_INTERVAL=6

# Sentry (opcional - para monitoramento de erros)
# SENTRY_DSN=https://sua-dsn-do-sentry

# Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Security Headers
SECURE_HEADERS=true
HTTPS_ONLY=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# INSTRUÇÕES IMPORTANTES:
# ===========================================
# 1. Substitua <db_password> pela senha real do MongoDB
# 2. Configure as URLs reais do frontend e backend
# 3. Configure as credenciais de email se necessário
# 4. Mantenha este arquivo seguro - nunca commite senhas reais
# 5. Use variáveis de ambiente da plataforma de deploy quando possível
# ===========================================
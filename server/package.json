{
  "name": "sistema-zara-backend",
  "version": "1.0.1",
  "description": "Backend do Sistema ZARA - Node.js + Express + PostgreSQL",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop zara-server",
    "test": "jest --watchAll --verbose",
    "test:ci": "jest --ci --coverage",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "build": "npm install && npx prisma generate && npx prisma db push",
    "railway:build": "npm install && prisma generate",
    "railway:start": "prisma migrate deploy && npm start",
    "railway:deploy": "npx prisma db push && npm start"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@sentry/node": "^7.85.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "prisma": "^5.7.1",
    "puppeteer": "^24.19.0",
    "redis": "^4.6.11",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ]
  }
}
